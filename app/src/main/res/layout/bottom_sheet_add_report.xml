<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_primary"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/actionBarBackground"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start|center"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/regular"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:text="New Report"
            android:textColor="@color/text_color_primary"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
        android:layout_gravity="end|center"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/icon_button_bg_color"
        app:icon="@drawable/ic_close"
        app:iconTint="@color/icon_button_icon_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="0dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dip"
                android:layout_marginTop="10dp"
                android:id="@+id/imgSite"
                android:src="@drawable/add_image2"
                android:scaleType="fitXY" />




        <TextView
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/regular"
            android:text="Property Name"
            android:textColor="@color/text_color_black" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/textInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
        >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dip"

                android:inputType="textCapSentences"
                android:fontFamily="@font/regular"
                android:id="@+id/edtxtName"
                android:hint="Enter Property Name"
                android:padding="5dip" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/regular"
            android:text="Address"
            android:textColor="@color/text_color_black" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/textInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:inputType="textCapSentences"

                android:fontFamily="@font/regular"
                android:id="@+id/edtxtAddress"
                android:hint="Enter Property Address"
                android:padding="5dip" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/regular"
            android:text="Type of Property"
            android:textColor="@color/text_color_black" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            app:singleSelection="true">

            <!-- Apple Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tsRetail"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="btn"
                android:text="Retail"
                android:paddingHorizontal="5dip"
                android:textSize="15sp"
                android:textColor="@color/unselected_button_text_color"
                app:strokeColor="@color/unselected_button_stroke_color"
                app:backgroundTint="@color/color_transparent"
                app:cornerRadius="5dp"
                app:strokeWidth="1dp" />

            <!-- Banana Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tsIndustrial"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:paddingHorizontal="5dip"

                android:tag="btn"
                android:layout_height="wrap_content"
                android:text="Industrial"
                android:textColor="@color/unselected_button_text_color"
                app:strokeColor="@color/unselected_button_stroke_color"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="0dp"
                app:strokeWidth="1dp" />

            <!-- Orange Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tsOffice"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:tag="btn"
                android:paddingHorizontal="5dip"
                android:layout_height="wrap_content"
                android:text="Office"
                android:textColor="@color/unselected_button_text_color"
                app:strokeColor="@color/unselected_button_stroke_color"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="5dp"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tsSpecialized"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:tag="btn"
                android:paddingHorizontal="5dip"
                android:layout_height="wrap_content"
                android:text="Specialized"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="5dp"
                android:textColor="@color/unselected_button_text_color"
                app:strokeColor="@color/unselected_button_stroke_color"
                app:strokeWidth="1dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitNewReport"
            style="@style/button_primary_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="30dp"
            android:text="Submit" />
    </LinearLayout>
</LinearLayout>