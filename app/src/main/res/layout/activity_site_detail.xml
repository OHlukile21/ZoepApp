<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   android:orientation="vertical">


    <ImageView
        android:id="@+id/imgSite"
        android:layout_width="match_parent"
        android:layout_height="275dip"
        android:scaleType="fitXY"
        android:src="@drawable/zoep_logo2" />

    <LinearLayout
        android:layout_marginTop="250dip"
        android:id="@+id/bottom_sheet"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_color_primary"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSiteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/semi_bold"
                        android:text="Wanderers Stadium"
                        android:layout_marginVertical="5dip"
                        android:textColor="@color/text_color_black"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:id="@+id/llNoIncidentsAlert"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dip"
                            android:src="@drawable/no_site_alert"
                            android:layout_height="50dip"/>
                        <TextView
                            android:layout_marginTop="1dip"
                            android:id="@+id/txtNoIncidents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Incidents Found!"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="16sp"
                            android:fontFamily="@font/medium" />
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:id="@+id/btnRetry"
                            android:layout_marginTop="20dip"
                            android:layout_height="wrap_content"

                            style="@style/button_primary_outline"
                            android:text="Retry" />

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvIncidents"
                        android:visibility="gone"
                        android:layout_below="@id/txtSiteName"
                        android:layout_above="@id/btnNewIncident"
                        android:layout_marginBottom="5dip"
                        android:layout_width="match_parent"
                        tools:listitem="@layout/item_incident"
                        android:layout_height="match_parent"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNewIncident"
                        android:layout_alignParentBottom="true"
                        style="@style/button_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Incident" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</FrameLayout>