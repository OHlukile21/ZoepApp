<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/imgSite"
                    android:scaleType="fitXY"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/person1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wanderers Stadium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/medium" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: Corlette Drive, illovo, Sandton, 2196"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/medium" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Type: Specialized"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/medium" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtLastInspectionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Inspection: Never"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/medium" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtNextInspectionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Inspection: 12 may 2025"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/medium" />
                <TextView
                    android:id="@+id/txtNumberOfDefects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Defects: 0"
                    android:textColor="@color/black"

                    android:textSize="12sp"
                    android:fontFamily="@font/medium" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>