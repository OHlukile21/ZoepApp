<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_primary"
    android:orientation="vertical">



    <ImageView
        android:layout_marginTop="20dip"
        android:src="@drawable/zoep_logo2"
        android:layout_width="match_parent"
        android:layout_height="200dip"/>


    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/semi_bold"
        android:text="Sign In"
        android:textColor="@color/text_color_primary"
        android:textSize="24sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dip"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/regular"
        android:text="Email"
        android:textColor="@color/edittext_hint_color"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/regular"
        android:id="@+id/edtxtEmail"
        android:inputType="textEmailAddress"
        android:paddingTop="16dp"
       android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:hint="user@mail.com"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/regular"
        android:text="Password"
        android:textColor="@color/edittext_hint_color"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="26dp"
        android:inputType="textPassword"
        android:paddingTop="16dp"
        android:fontFamily="@font/regular"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/edtxtPassword"
        android:hint="。。。。。。。。。。"
        android:textColorHint="@color/text_color_black"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        style="@style/button_primary_style"
        android:layout_marginTop="30dp"
        android:text="LOGIN"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>





</LinearLayout>